<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/relative_layout">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="#FF000000"
                android:id="@+id/headline_article">
            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="626dp"
                android:layout_height="352dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="8dp"
                android:layout_below="@+id/headline_article"
                android:id="@+id/imgabc"
                android:elevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="352dp"
                android:scaleType="centerCrop"
                android:layout_below="@+id/headline_article"
                android:id="@+id/article_image"
                >
            </ImageView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgabc"
                android:padding="10dp"
                android:id="@+id/article_description">
            </TextView>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_below="@+id/article_description"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                android:id="@+id/article_author">
            </de.hdodenhof.circleimageview.CircleImageView>


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/article_description"
                android:layout_toRightOf="@+id/article_author"
                android:textStyle="bold"
                android:textColor="#FF000000"
                android:id="@+id/article_author_name">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments  "
                android:layout_below="@id/article_description"
                android:layout_toStartOf="@+id/comments">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/article_description"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingRight="45dp"
                android:textColor="#FF000000"
                android:id="@+id/comments">

            </TextView>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>